<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.home.EditProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/back_1"
        android:id="@+id/activity_edit_prof_rel_title"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_marginRight="@dimen/_20sdp"
            android:id="@+id/activity_edit_prof_btn_back"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"

            android:fontFamily="@font/araby"
            android:textSize="@dimen/_20sdp"
            android:text="@string/edit_profile"
            android:textColor="@color/white"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_edit_prof_rel_title"
        android:layout_marginTop="-100dp"
        android:background="@color/white">
                <TextView
            android:fontFamily="@font/araby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_p"
            android:textColor="@color/darkblue"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:id="@+id/activity_edit_prof_tv_welcome"/>

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeColor="@color/darkblue"

            android:layout_width="match_parent"

            android:layout_height="@dimen/_40sdp"
            android:textColorHint="@color/darkblue"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:hint="@string/name"
            android:layout_below="@id/activity_edit_prof_tv_welcome"



            android:id="@+id/activity_edit_prof_txt_username">
            <com.google.android.material.textfield.TextInputEditText
                android:fontFamily="@font/araby"
                android:layout_width="match_parent"
                android:inputType="textPersonName"

                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:id="@+id/activity_edit_prof_ed_username"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeColor="@color/darkblue"

            android:layout_width="match_parent"

            android:layout_height="@dimen/_40sdp"
            android:textColorHint="@color/darkblue"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:hint="@string/mobile_phone"
            android:layout_below="@id/activity_edit_prof_txt_username"



            android:id="@+id/activity_edit_prof_txt_phone">
            <com.google.android.material.textfield.TextInputEditText
                android:fontFamily="@font/araby"

                android:layout_width="match_parent"
                android:inputType="phone"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:id="@+id/activity_edit_prof_ed_phone"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeColor="@color/darkblue"

            android:layout_width="match_parent"

            android:layout_height="@dimen/_40sdp"
            android:textColorHint="@color/darkblue"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:hint="@string/home_phone"
            android:layout_below="@id/activity_edit_prof_txt_phone"



            android:id="@+id/activity_edit_prof_txt_phone_home">
            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:fontFamily="@font/araby"

                android:inputType="phone"

                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:id="@+id/activity_edit_prof_ed_phone_home"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/activity_edit_prof_btn_edit"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="@string/save_changes"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/araby"/>





    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_30sdp"

        android:layout_height="@dimen/_60sdp"
        android:id="@+id/activity_edit_prof_iv_edit_prof"
        android:src="@drawable/photo"
        android:layout_alignParentEnd="true"/>




</RelativeLayout>