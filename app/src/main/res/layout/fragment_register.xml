<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.auth.RegisterFragment">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputLayout
                app:boxStrokeWidthFocused="0.5dp"

                android:hint="@string/user_name"
                android:textColorHint="@color/darkblue"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="0.5dp"
                app:boxStrokeColor="@color/darkblue"


                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:id="@+id/fragment_register_txt_username">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/araby"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp"

                    android:textColor="@color/black"
                    android:id="@+id/fragment_register_ed_username"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                app:boxStrokeWidthFocused="0.5dp"

                android:hint="@string/email"
                android:textColorHint="@color/darkblue"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="0.5dp"
                app:boxStrokeColor="@color/darkblue"
                android:layout_below="@id/fragment_register_txt_username"

                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/fragment_register_txt_email">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/araby"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp"

                    android:textColor="@color/black"
                    android:id="@+id/fragment_register_ed_email"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                app:boxStrokeWidthFocused="0.5dp"

                android:hint="@string/mobile_phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="0.5dp"
                app:boxStrokeColor="@color/darkblue"

                android:textColorHint="@color/darkblue"
                android:layout_below="@id/fragment_register_txt_email"

                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/fragment_register_txt_mobile">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:fontFamily="@font/araby"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp"
                    android:inputType="phone"

                    android:textColor="@color/black"
                    android:id="@+id/fragment_register_ed_mobilephone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                app:boxStrokeWidthFocused="0.5dp"

                android:hint="@string/home_phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="0.5dp"
                app:boxStrokeColor="@color/darkblue"

                android:textColorHint="@color/darkblue"
                android:layout_below="@id/fragment_register_txt_mobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/fragment_register_txt_home_phone">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/araby"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:inputType="phone"
                    android:padding="@dimen/_5sdp"

                    android:textColor="@color/black"
                    android:id="@+id/fragment_register_ed_home_phone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                app:boxStrokeWidthFocused="0.5dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="0.5dp"
                app:boxStrokeColor="@color/darkblue"
                app:passwordToggleEnabled="true"


                android:hint="@string/password"
                android:textColorHint="@color/darkblue"
                android:layout_below="@id/fragment_register_txt_home_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/fragment_register_txt_password">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/araby"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp"
                    android:inputType="numberPassword"
                    android:textColor="@color/black"
                    android:id="@+id/fragment_register_ed_password"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                app:boxStrokeWidthFocused="0.5dp"

                app:passwordToggleEnabled="true"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="0.5dp"
                app:boxStrokeColor="@color/darkblue"

                android:hint="@string/confirm_password"
                android:textColorHint="@color/darkblue"
                android:layout_below="@id/fragment_register_txt_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/fragment_register_txt_confirm_password">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="numberPassword"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/araby"

                    android:textColor="@color/black"
                    android:id="@+id/fragment_register_ed_confirm_password"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                app:boxStrokeWidthFocused="0.5dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="0.5dp"
                app:boxStrokeColor="@color/darkblue"

                android:hint="@string/address"
                android:textColorHint="@color/darkblue"
                android:layout_below="@id/fragment_register_txt_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/fragment_register_txt_address">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/araby"

                    android:textColor="@color/black"
                    android:id="@+id/fragment_register_ed_address"/>
            </com.google.android.material.textfield.TextInputLayout>
            <CheckBox
                android:button="@drawable/chc_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agree_on_terms_of_service"
                android:layout_below="@id/fragment_register_txt_address"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:id="@+id/fragment_register_cb_agree_terms"
                android:fontFamily="@font/araby"
                android:textColor="@color/darkblue"
                android:layout_alignParentStart="false"
                android:textSize="@dimen/_12sdp"

                />
            <Button
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:fontFamily="@font/araby"
                android:layout_below="@id/fragment_register_cb_agree_terms"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textColor="@color/white"
                android:text="@string/next"
                android:background="@color/darkblue"
                android:id="@+id/fragment_login_btn_login"/>











        </RelativeLayout>
    </ScrollView>


</RelativeLayout>