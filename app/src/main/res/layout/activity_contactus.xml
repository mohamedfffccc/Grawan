<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.home.AboutActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/back_1"
        android:id="@+id/activity_contactus_rel_title"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_marginRight="@dimen/_20sdp"
            android:id="@+id/activity_contactus_btn_back"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"

            android:fontFamily="@font/araby"
            android:textSize="@dimen/_20sdp"
            android:text="@string/contact_us"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_contactus_rel_title"
        android:layout_marginTop="-150dp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:id="@+id/activity_contactus_iv_logo"
                android:layout_height="@dimen/_100sdp"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/contact"/>
            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="0.5dp"
                app:boxStrokeColor="@color/darkblue"

                android:layout_width="match_parent"

                android:layout_height="@dimen/_40sdp"
                android:textColorHint="@color/darkblue"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:hint="@string/user_name"
                android:layout_below="@id/activity_contactus_iv_logo"



                android:id="@+id/activity_contactus_txt_username">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/araby"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"

                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:id="@+id/activity_contactus_ed_username"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="0.5dp"
                app:boxStrokeColor="@color/darkblue"

                android:layout_width="match_parent"

                android:layout_height="@dimen/_40sdp"
                android:textColorHint="@color/darkblue"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:hint="@string/mobile_phone"
                android:layout_below="@id/activity_contactus_txt_username"



                android:id="@+id/activity_contactus_txt_phone">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/araby"

                    android:layout_width="match_parent"
                    android:inputType="phone"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:id="@+id/activity_contactus_ed_phone"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="0.5dp"
                app:boxStrokeColor="@color/darkblue"

                android:layout_width="match_parent"

                android:layout_height="@dimen/_150sdp"

                android:textColorHint="@color/darkblue"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:hint="@string/text_is_written_here"
                android:layout_below="@id/activity_contactus_txt_phone"



                android:id="@+id/activity_contactus_txt_text">
                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_gravity="top"
                    android:gravity="top"
                    android:fontFamily="@font/araby"


                    android:inputType="text"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:id="@+id/activity_contactus_ed_text"                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="match_parent"
                android:id="@+id/activity_contactus_btn_edit"
                android:layout_below="@id/activity_contactus_txt_text"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/send"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/araby"/>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>