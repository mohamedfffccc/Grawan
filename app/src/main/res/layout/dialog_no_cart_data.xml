<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialoge_shape"

    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20sdp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/araby"
        android:textColor="@color/black"
        android:text="@string/no_data_in_the_shopping_cart"
        android:id="@+id/no_data_dialog_tv_message"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_20sdp"
        android:layout_below="@id/no_data_dialog_tv_message"
        android:background="@color/darkblue"
        android:text="@string/add"
        android:id="@+id/no_data_dialog_btn_add"
        android:textColor="@color/white"
        android:fontFamily="@font/araby"/>

</RelativeLayout>