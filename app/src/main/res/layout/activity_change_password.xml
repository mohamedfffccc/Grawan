<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/back_1"
        android:id="@+id/activity_profile_rel_title"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_marginRight="@dimen/_20sdp"
            android:id="@+id/activity_change_password_btn_back"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"

            android:fontFamily="@font/araby"
            android:textSize="@dimen/_20sdp"
            android:text="@string/change_password"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_profile_rel_title"
        android:layout_marginTop="-150dp"
        android:background="@color/white">

        <com.google.android.material.textfield.TextInputLayout
            app:passwordToggleEnabled="true"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeColor="@color/darkblue"

            android:layout_width="match_parent"

            android:layout_height="@dimen/_40sdp"
            android:textColorHint="@color/darkblue"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:hint="@string/current_password"


            android:id="@+id/activity_change_password_txt_current_password">
            <com.google.android.material.textfield.TextInputEditText
                android:fontFamily="@font/araby"
                android:layout_width="match_parent"
                android:inputType="numberPassword"

                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:id="@+id/activity_change_password_ed_current_password"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            app:passwordToggleEnabled="true"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeColor="@color/darkblue"

            android:layout_width="match_parent"

            android:layout_height="@dimen/_40sdp"
            android:textColorHint="@color/darkblue"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:hint="@string/new_password"
            android:layout_below="@id/activity_change_password_txt_current_password"



            android:id="@+id/activity_change_password_txt_new_password">
            <com.google.android.material.textfield.TextInputEditText
                android:fontFamily="@font/araby"

                android:layout_width="match_parent"
                android:inputType="numberPassword"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:id="@+id/activity_change_password_ed_new_password"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            app:passwordToggleEnabled="true"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="0.5dp"
            app:boxStrokeColor="@color/darkblue"

            android:layout_width="match_parent"

            android:layout_height="@dimen/_40sdp"
            android:textColorHint="@color/darkblue"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:hint="@string/confirm_newpassword"
            android:layout_below="@id/activity_change_password_txt_new_password"



            android:id="@+id/activity_change_password_txt_confirm_new_password">
            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:fontFamily="@font/araby"

                android:inputType="numberPassword"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:id="@+id/activity_change_password_ed_confirm_new_password"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/activity_change_password_btn_edit"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="@string/save_changes"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/araby"/>

        </RelativeLayout>
</RelativeLayout>