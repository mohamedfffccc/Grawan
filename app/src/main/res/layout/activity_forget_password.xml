<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activity.auth.ForgetPassword">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/back_1"
        android:id="@+id/activity_forget_password_rel1"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:id="@+id/activity_forget_password_btn_back"/>
        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginBottom="-25dp"
            android:layout_alignParentEnd="true"

            android:src="@drawable/back_1_utils"
            android:id="@+id/activity_forget_password_img_logo"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:layout_alignParentStart="true"
            android:fontFamily="@font/araby"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toStartOf="@id/activity_forget_password_img_logo"
            android:layout_marginTop="@dimen/_120sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:text="@string/enter_email"
            android:id="@+id/activity_forget_password_tv_message"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_forget_password_rel1"
        android:fillViewport="true">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/password_container">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="0.5dp"
                app:boxStrokeColor="@color/darkblue"

                android:layout_width="match_parent"

                android:layout_height="@dimen/_40sdp"
                android:textColorHint="@color/darkblue"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:hint="@string/email_or_phone"



                android:id="@+id/fragment_forget_password1_txt_email">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/araby"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:id="@+id/fragment_forget_password_ed_email"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="match_parent"

                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:layout_below="@id/fragment_forget_password1_txt_email"
                android:layout_marginTop="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/araby"
                android:text="@string/send"
                android:background="@color/darkblue"
                android:id="@+id/fragment_forget_password_btn_send"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>