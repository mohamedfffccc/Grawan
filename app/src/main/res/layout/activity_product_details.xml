<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.home.ProductDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/back_1"
        android:id="@+id/activity_product_details_rel_title"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_marginRight="@dimen/_20sdp"
            android:id="@+id/activity_product_details_btn_back"/>
        <ImageView

            android:layout_marginTop="@dimen/_30sdp"

            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_iconfinder_shopping_cart_216477"
            android:id="@+id/activity_product_details_iv_cart"/>
        <ImageView
            android:layout_marginTop="@dimen/_30sdp"

            android:layout_width="@dimen/_20sdp"
            android:id="@+id/activity_product_details_iv_search"
            android:layout_height="@dimen/_20sdp"
            android:layout_toRightOf="@id/activity_product_details_iv_cart"
            android:src="@drawable/ic_iconfinder_search_322497"
            android:layout_marginLeft="@dimen/_10sdp"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"

            android:fontFamily="@font/araby"
            android:textSize="@dimen/_20sdp"
            android:text="@string/product_details"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="-150dp"
        android:layout_below="@id/activity_product_details_rel_title"
>


    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@color/white">
        <ImageView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/gas_tube"
            android:id="@+id/activity_product_details_iv_product_image"/>
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"

            android:textColor="@color/black"
            android:fontFamily="@font/araby"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:layout_below="@id/activity_product_details_iv_product_image"
            android:layout_alignParentStart="true"
            android:text="product_name"
            android:id="@+id/activity_product_details_tv_product_name"/>
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/araby"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:layout_below="@id/activity_product_details_tv_product_name"
            android:layout_alignParentStart="true"
            android:text="product_price"
            android:id="@+id/activity_product_details_tv_product_price"/>
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:textColor="@color/light_grey"
            android:fontFamily="@font/araby"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:layout_below="@id/activity_product_details_tv_product_price"
            android:layout_alignParentStart="true"
            android:text=";sjclsj'pgsr
DR[kdig;rljg;ordkd[kjhrj[rt5i=t6yeop[eoh'oehe
t;i"
            android:id="@+id/activity_product_details_tv_product_describtion"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_linear_add_remove_item"
            android:orientation="horizontal"
            android:layout_below="@id/activity_product_details_iv_product_image"
            android:layout_alignParentEnd="true">
        <ImageView

            android:id="@+id/activity_product_details_btn_add_item"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/activity_product_details__item_count"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/activity_product_details_btn_remove_item"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_remove_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

<Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/darkblue"
        android:layout_marginBottom="@dimen/_50sdp"
    android:textSize="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/araby"
        android:text="@string/add_to_cart"
        android:id="@+id/activity_product_details_btn_add_to_cart"/>

</RelativeLayout>